// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          String @id @default(cuid())
  name        String
  progress    Int    @default(0) // Progresso de 0 a 100
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Modelo para dados gerais do dashboard
model DashboardMetric {
  id              String  @id @default(cuid())
  earningsMonthly Decimal
  earningsAnnual  Decimal
  tasksPercentage Int
  pendingRequests Int
}

model RevenueSource {
    id          String  @id @default(cuid())
    sourceName  String  // "Direct", "Social", "Referral"
    value       Int     // Valor para o gr√°fico de rosca
}